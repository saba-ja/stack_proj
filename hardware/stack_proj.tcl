# Check file required for this script exists
proc checkRequiredFiles { origin_dir} {
  set status true
  set files [list \
 "[file normalize "$origin_dir/src/debounce.vhd"]"\
 "[file normalize "$origin_dir/src/reg_file.vhd"]"\
 "[file normalize "$origin_dir/src/stack_ctrl.vhd"]"\
 "[file normalize "$origin_dir/src/stack.vhd"]"\
 "[file normalize "$origin_dir/src/top_module.vhd"]"\
 "[file normalize "$origin_dir/constr/zybo_z7_master.xdc"]"\
 "[file normalize "$origin_dir/sim/stack_tb.vhd"]"\
  ]
  foreach ifile $files {
    if { ![file isfile $ifile] } {
      puts " Could not find remote file $ifile "
      set status false
    }
  }

  return $status
}
